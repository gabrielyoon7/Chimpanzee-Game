<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/monkeyMode"
        android:layout_width="225dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:text="원숭이 모드(3 x 3)"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/gorillaMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.907" />

    <Button
        android:id="@+id/gorillaMode"
        android:layout_width="225dp"
        android:layout_height="69dp"
        android:layout_marginBottom="12dp"
        android:text="고릴라 모드(5 x 4)"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chimpanzeeMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/chimpanzeeMode"
        android:layout_width="225dp"
        android:layout_height="69dp"
        android:layout_marginBottom="24dp"
        android:text="침팬지 모드(8 x 5)"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="346dp"
        android:layout_height="51dp"
        android:text="어떤 동물에 도전하시겠습니까?"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/monkeyMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851" />

</androidx.constraintlayout.widget.ConstraintLayout>